<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<GridPane xmlns:fx="http://javafx.com/fxml" prefWidth="300" hgap="10" vgap="10">
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>
    <children>
        <Label text="ID" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.hgrow="ALWAYS"/>
        <Label text="Password" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.hgrow="ALWAYS"/>

        <HBox GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS"
            alignment="CENTER" spacing="20">
            <children>
                <Button text="Login"/>
                <Button text="Cancel"/>
            </children>
        </HBox>
    </children>
</GridPane>